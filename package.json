{
  "name": "ripple-studio-booking-platform",
  "version": "1.0.0",
  "description": "Ripple - Music Booking Platform",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client && npm run dev",
    "build": "npm -w client run build",
    "start": "cd server && npm start",
    "seed": "cd server && npm run seed",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install",
    "test": "cd server && npm test",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\""
  },
  "keywords": [
    "music",
    "booking",
    "collaboration",
    "artists",
    "studios",
    "MERN",
    "React",
    "Node.js"
  ],
  "author": "Music Booking Platform Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0",
    "vite": "^7.1.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/music-booking-platform.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/music-booking-platform/issues"
  },
  "homepage": "https://musicbooking.io",
  "dependencies": {
    "mongoose-paginate-v2": "^1.9.1",
    "node-cron": "^4.2.1"
  },
  "overrides": {
    "@types/jest": "^29.5.14"
  }
}
